import random
import time

# Tittel
print("Det er tid for...")
intro = [" _ ", "|R|", "|U|", "|S|", "|S|", "|I|", "|S|", "|K|", "| |", "|R|", "|U|", "|L|", "|E|", "|T|", "|T|", " ‾ "]
for x in intro:
  print x
  time.sleep(0.2)
time.sleep(0.4)

# Gamle måten å gjøre introen:
