# Mekanikken bak spillet
loop = 1
score = 0
svar2 = input("Trykk 'y' for å starte: ")
if svar2 == "y":
  while loop == 1:
    time.sleep(1)
    verdi = random.randint(1, 6)
    if verdi == 5:
      print("Pang! Du er død.")
      loop = 0
      time.sleep(0.3)
      score = 0 # tilbakestiller scoren når du dør, Kan fjernes hvis du vi at det skal stå hvor mange poengdu fikk før du døde.
    
      print("Din poengsum ble tilbakestilt når du døde! Du fikk: " + "(" + str(score) + ")" + " poeng!")
    else:
      print("Klikk! Du lever.")
      score += 1
      # Jeg endret det så det står poengsum hver gang du lever
      print("du har: " + "(" + str(score) + ")" + " poeng!")
      time.sleep(0.3)
      loopsprsml = input(str("Vil du prøve igjen? (y/n)"))
      if loopsprsml == "n":
          print("Du fikk: " + "(" + str(score) + ")" + " poeng!")
          exit()
      else:
        continue
  else:
    exit()
else:
  exit()
